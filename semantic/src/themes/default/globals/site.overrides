//@import "../pages/tools";

#tools {
  .ui.tabular.secondary.menu {
    font-family: @codeFont;
    margin-left: 0.1em;
    &.left-padded {
      margin-left: 6.79em;
    }
    .item {
      color: @red;
      cursor: pointer;
      margin: 0 0.33333333em 0 0;
      padding: 0.8em 0.93333333em 0.8em 0;
      &.active {
        background: none;
        color: @blue;
        font-weight: normal;
        margin-bottom: 0;
      }
    }
  }
  .ui.tab {
    margin-right: -0.33333333em;
    .grid {
      .column {
        //height: 300px;
        text-align: center;
        font: 0/0 a;
        img {
          //vertical-align: middle;
          //margin: auto;
          display: inline-block;
          vertical-align: middle; /* vertical alignment of the inline element */
          //font: 16px/1 Arial sans-serif;
        }
        &:before {
          content: ' ';
          display: inline-block;
          vertical-align: middle;
          height: 100%;
        }
      }
    }
  }
}